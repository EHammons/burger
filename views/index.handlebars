<div class="container">
    <div class="title">
        <h1><i class="fas fa-hamburger"></i> Burgers Burgers Burgers!! <i class="fas fa-hamburger"></i></h1>
    </div>
</div>

<div class="container">
    <div class="toEat">
        <h2>Burgers to be devoured:</h2>

        <ul class="list-group">
            {{#each burger}}
                {{#unless devoured}}
                    {{> burger/burger-block devour=true}}
                {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class="eaten">
        <h2>Burgers you have devoured:</h2>

        <ul class="list-group">
            {{#each burger}}
                {{#if devoured}}
                    {{> burger/burger-block devour=false}}
                {{/if}}
            {{/each}}
        </ul>
    </div>

    <div class="form">
        <h2>Add a Burger</h2>
        <form class="create-form">
            <div class="form-group">
                <label for="bu">Burger Name:</label>
                <input type="text" id="bu" name="name">
            </div>

            <button class="btn btn-success" type="submit">Make It!</button>
        </form>
    </div>
</div>