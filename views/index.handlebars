<h1>Burgers!</h1>

<h2>Burgers to be devoured:</h2>

<ul>
    {{#each burger}}
        {{#unless devoured}}
            {{> burger/burger-block devour=true}}
        {{/unless}}
    {{/each}}
</ul>

<h2>Burgers you have devoured:</h2>

<ul>
    {{#each burger}}
        {{#if devoured}}
            {{> burger/burger-block devour=false}}
        {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">
    <div class="form-group">
        <label for="bu">Burger Name:</label>
        <input type="text" id="bu" name="name">
    </div>

    <button type="submit">Add Burger</button>
</form>

<script type="text/javascript">
$(function() {
  $(".change-devour").on("click", function(event) {
    var id = $(this).data("id");
    var newDevour = $(this).data("newdevour");

    var newDevourState = {
      devoured: newDevour
    };

    $.ajax("/api/cats/" + id, {
      type: "PUT",
      data: newDevourState
    }).then(
      function() {
        console.log("changed devoured to", newDevour);
        location.reload();
      }
    );
  });

  $(".create-form").on("submit", function(event) {
    event.preventDefault();

    var newBurger = {
      name: $("#bu").val().trim()
    };

    $.ajax("/api/cats", {
      type: "POST",
      data: newBurger
    }).then(
      function() {
        console.log("created new burger");
        location.reload();
      }
    );
  });
</script>